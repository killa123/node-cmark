Language: Cpp
BasedOnStyle: Google
Standard: Cpp11

ColumnLimit: 120
BreakBeforeBraces: Stroustrup
SpaceAfterTemplateKeyword: false

AllowShortCaseLabelsOnASingleLine: true
AllowShortFunctionsOnASingleLine: Empty

FixNamespaceComments: true

IncludeCategories:
  - Regex:           '^<.*\.h>'
    Priority:        2
  - Regex:           '^<.*'
    Priority:        1
  - Regex:           '.*'
    Priority:        3
